<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SisoTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorToolbarTitle</item>
        <item name="android:textColorPrimary">@color/colorToolbarTitle</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <!-- backbutton color -->
        <item name="android:textColorSecondary">@color/colorToolbarTitle</item>
    </style>


    <!-- 가이드 화면 -->
    <style name="GuideTitle">
        <item name="android:textColor">@color/sisoPrimaryColor</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="GuideComment">
        <item name="color">@color/sisoDisableText</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="MemberGuideTitle">
        <item name="color">@color/sisoPrimaryText</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="MemberGuideText">
        <item name="color">@color/sisoSecondaryText</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/colorPrimaryDark</item>
    </style>

    <style name="SisoToolbarTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SisoToolbarTitleTextWhite" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SisoJobTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorContentTextPink</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="SisoJobTitleComment">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/sisoDisableText</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SisoJobLine30">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="SisoButton">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:height">35dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SisoButtonWhite" parent="SisoButton">
        <item name="android:background">@drawable/btn_white</item>
        <item name="android:textColor">@color/sisoAccentText</item>
    </style>

    <style name="SisoRoundButtonWhite" parent="SisoButton">
        <item name="android:background">@drawable/round_btn_white</item>
        <item name="android:textColor">@color/sisoAccentText</item>
    </style>

    <style name="SisoButtonGreen" parent="SisoButton">
        <item name="android:background">@drawable/btn_green</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="SisoRoundButtonGreen" parent="SisoButton">
        <item name="android:background">@drawable/round_btn_green</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="SisoNextButton" parent="SisoButton">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@drawable/round_btn_pink</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TimeTableWeekText">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="TimeTableCell">
        <item name="android:background">@color/colorWhite</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>

    <style name="TimeTableWeekLayoutCell">
        <item name="android:background">@color/sisoAccentColor</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TimeTableTimeLayoutCell">
        <item name="android:background">@color/colorWhite</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
    </style>

    <style name="TimeTableTimeTextCell">
        <item name="android:background">@color/colorWhite</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="ToggleBtnStyle">
        <item name="android:background">@drawable/tg_btn</item>
        <item name="android:textColor">@color/tg_text_color</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="ToggleBtnGrayStyle">
        <item name="android:background">@drawable/tg_btn_gray</item>
        <item name="android:textColor">@color/tg_text_color</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <!-- Sitter List TabLayout -->
    <style name="ListTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/ListTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/colorContentTextPink</item>
    </style>
    <style name="ListTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/color7E7E7E</item>
        <item name="textAllCaps">false</item>
    </style>


    <!-- Sitter List Text -->
    <style name="ListName">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/sisoTitleText</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ListBreif">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/sisoSecondaryText</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ListAddr">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/sisoSecondaryText</item>
    </style>
    <style name="ListEtc">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/sisoDisableText</item>
    </style>


    <!-- Sitter Detail -->
    <style name="DetailSummary">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/colorContentTextPink</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="DetailSummaryUnit">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/color979797</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="DetailIntroduceBrief">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="DetailIntroduceFull">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/color333333</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="DetailItemText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/color333333</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="TestimonialName">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorContentTextPink</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ContactPopupName">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/colorContentTextPink</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
