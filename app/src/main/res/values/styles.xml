<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SisoTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorToolbarTitle</item>
        <item name="android:textColorPrimary">@color/colorToolbarTitle</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <!-- backbutton color -->
        <item name="android:textColorSecondary">@color/colorToolbarTitle</item>

    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/colorPrimaryDark</item>
    </style>

    <style name="SisoToolbarTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
    </style>


    <style name="SisoCheckBoxTitle">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/colorContentTextPink</item>
        <item name="android:layout_marginBottom">3dp</item>
    </style>
    <style name="SisoCheckBoxTitleComment">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorA1A1A1</item>
    </style>

    <style name="SisoJobTitle">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/colorContentTextPink</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
    <style name="SisoJobTitleComment">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorA1A1A1</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="SisoJobLine30">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>
    <style name="SisoNextButton">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:height">35dp</item>
        <item name="android:background">@drawable/btn_pink_normal</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

</resources>
