<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ActionBar">
        <attr name="left_image" format="reference|integer"></attr>
        <attr name="text" format="reference|string"></attr>
        <attr name="right_image" format="reference|integer"></attr>
    </declare-styleable>

    <declare-styleable name="SisoEditText">
        <attr name="label" format="reference|string"></attr>
        <attr name="input" format="reference|string"></attr>
        <attr name="guide" format="reference|string"></attr>
        <attr name="labelColor" format="reference"></attr>
        <attr name="input_type" format="string"></attr>
        <attr name="isHiddenLabel" format="boolean"></attr>
    </declare-styleable>

    <declare-styleable name="SisoCheckBox">
        <attr name="checkboxTitle" format="reference|string"></attr>
        <attr name="checkboxTitleComment" format="reference|string"></attr>
        <attr name="isChecked" format="boolean"></attr>
        <attr name="isDisabled" format="boolean"></attr>
        <attr name="isSetClickListener" format="boolean"></attr>
    </declare-styleable>

    <declare-styleable name="SisoModifyItemRow">
        <attr name="modifyItemTitle" format="reference|string"></attr>
        <attr name="modifyItemContent" format="reference|string"></attr>
        <attr name="isVisibleArrow" format="boolean"></attr>
    </declare-styleable>

    <declare-styleable name="SisoRadioMaxWidth">
        <attr name="radioTitle" format="reference|string"></attr>
    </declare-styleable>

    <declare-styleable name="SisoToggleButton">
        <attr name="toggleLabel" format="reference|string"></attr>
        <attr name="toggle_normal" format="integer"></attr>
        <attr name="toggle_selected" format="integer"></attr>
        <attr name="isSelected" format="boolean"></attr>
        <attr name="isAddClickListener" format="boolean"></attr>

    </declare-styleable>

    <declare-styleable name="SisoPicker">
        <attr name="data_list" format="integer"></attr>
        <attr name="default_idx" format="integer"></attr>
    </declare-styleable>

    <declare-styleable name="SisoInputProgress">
        <attr name="total_stage" format="reference|integer"></attr>
        <attr name="current_stage" format="reference|integer"></attr>
    </declare-styleable>

    <declare-styleable name="SisoAddChild">
        <attr name="child_icon" format="reference"></attr>
    </declare-styleable>

    <declare-styleable name="SisoDetailRow">
        <attr name="item_name" format="reference"></attr>
        <attr name="item_value" format="reference"></attr>
    </declare-styleable>

    <declare-styleable name="SisoTimeTable">
        <attr name="readonly" format="boolean"></attr>
    </declare-styleable>


    <!-- 사용하지 않음 -->
    <declare-styleable name="SisoSitterListCommon">
        <attr name="sitter_list_name" format="string"></attr>
        <attr name="sitter_list_brief" format="string"></attr>
        <attr name="sitter_list_addr1" format="string"></attr>
        <attr name="sitter_list_distance" format="string"></attr>
        <attr name="sitter_list_salary" format="string"></attr>
        <attr name="sitter_list_testimonial_cnt" format="string"></attr>
        <attr name="sitter_list_commute" format="string"></attr>
        <attr name="sitter_list_profile" format="string"></attr>
        <attr name="sitter_list_favorite" format="string"></attr>
    </declare-styleable>


</resources>
