<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/line_30"
        style="@style/SisoJobLine30"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/id_tv_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sitter_detail_sub_title_baby_gender"
            style="@style/DetailIntroduceBrief"
            android:layout_marginTop="10dp"
            />

        <LinearLayout
            android:id="@+id/id_ll_item_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center"
            >
        </LinearLayout>

    </LinearLayout>
</LinearLayout>

