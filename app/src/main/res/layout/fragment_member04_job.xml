
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".fragments.Sitter02GenderFragment">
    <ScrollView
        android:id="@+id/id_sv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:paddingBottom="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@android:color/white"
            >
            <!-- TODO: Update blank fragment layout -->
            <net.gringrid.siso.views.SisoInputProgress
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:total_stage="5"
                app:current_stage="1">
            </net.gringrid.siso.views.SisoInputProgress>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/fragment_vertical_left_margin"
                android:paddingTop="@dimen/fragment_vertical_top_margin"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:orientation="vertical"
                    android:gravity="center"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:text="@string/member04_job_title"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:layout_weight="6"
                        android:gravity="center"
                        android:text="@string/member04_job_title_comment"
                        />
                </LinearLayout>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:src="@drawable/woman2"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/fragment_vertical_top_margin"
                android:layout_marginBottom="@dimen/fragment_vertical_bottom_margin"
                android:background="@drawable/shadow_line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center">
                <ToggleButton
                    android:id="@+id/id_tg_job_0"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:textOn="@string/member04_job_tg_officer"
                    android:textOff="@string/member04_job_tg_officer"
                    style="@style/ToggleBtnStyle"
                    />
                <ToggleButton
                    android:id="@+id/id_tg_job_1"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:textOn="@string/member04_job_tg_housewife"
                    android:textOff="@string/member04_job_tg_housewife"
                    style="@style/ToggleBtnStyle"
                    android:layout_marginLeft="5dp"
                    />
                <ToggleButton
                    android:id="@+id/id_tg_job_2"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:textOn="@string/member04_job_tg_selfEmployed"
                    android:textOff="@string/member04_job_tg_selfEmployed"
                    style="@style/ToggleBtnStyle"
                    android:layout_marginLeft="5dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:paddingLeft="65dp"
                android:paddingRight="65dp"
                android:gravity="center">
                <ToggleButton
                    android:id="@+id/id_tg_job_3"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:textOn="@string/member04_job_tg_student"
                    android:textOff="@string/member04_job_tg_student"
                    style="@style/ToggleBtnStyle"
                    />
                <ToggleButton
                    android:id="@+id/id_tg_job_4"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:textOn="@string/member04_job_tg_write"
                    android:textOff="@string/member04_job_tg_write"
                    style="@style/ToggleBtnStyle"
                    android:layout_marginLeft="5dp"
                    />
            </LinearLayout>
            <net.gringrid.siso.views.SisoEditText
                android:id="@+id/id_et_job"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:label="@string/sitter8_et_rlg_write"
                app:input="@string/required"
                android:visibility="gone"
                >
            </net.gringrid.siso.views.SisoEditText>


        </LinearLayout>
    </ScrollView>
    <TextView
        android:id="@+id/id_tv_next_btn"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        style="@style/SisoNextButton"
        android:text="@string/btn_confirm"
        />
</LinearLayout>

