
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/id_iv_child_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_boy_small"
            />
        <EditText
            android:id="@+id/id_et_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />
        <EditText
            android:id="@+id/id_et_birth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:inputType="number"
            />
        <ImageView
            android:id="@+id/id_iv_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_checkbox_off"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:id="@+id/id_tv_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_cancel"
            android:layout_marginLeft="10dp"
            />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/id_ll_newborn_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:gravity="center">

        <net.gringrid.siso.views.SisoToggleButton
            android:id="@+id/id_tg_btn_boy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:toggle_normal="@drawable/tg_ic_boy_small_normal"
            app:toggle_selected="@drawable/tg_ic_boy_small_selected"
            app:toggleLabel="@string/parent02_add_boy"
            app:isAddClickListener="false"
            >
        </net.gringrid.siso.views.SisoToggleButton>
        <net.gringrid.siso.views.SisoToggleButton
            android:id="@+id/id_tg_btn_girl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:toggle_normal="@drawable/tg_ic_girl_small_normal"
            app:toggle_selected="@drawable/tg_ic_girl_small_selected"
            app:toggleLabel="@string/parent02_add_girl"
            app:isAddClickListener="false"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            >
        </net.gringrid.siso.views.SisoToggleButton>
        <net.gringrid.siso.views.SisoToggleButton
            android:id="@+id/id_tg_btn_newborn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:toggle_normal="@drawable/tg_ic_newborn_small_normal"
            app:toggle_selected="@drawable/tg_ic_newborn_small_selected"
            app:toggleLabel="@string/parent02_add_newborn"
            app:isAddClickListener="false"
            >
        </net.gringrid.siso.views.SisoToggleButton>
    </LinearLayout>
</LinearLayout>

