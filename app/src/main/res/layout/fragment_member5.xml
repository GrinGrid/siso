
<ScrollView
    android:id="@+id/id_sv"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/white"
        tools:context=".fragments.Member01UserTypeFragment">

        <!-- TODO: Update blank fragment layout -->
        <net.gringrid.siso.views.SisoInputProgress
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:total_stage="5"
            app:current_stage="4">
        </net.gringrid.siso.views.SisoInputProgress>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/fragment_vertical_left_margin"
            android:paddingTop="@dimen/fragment_vertical_top_margin"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:orientation="vertical"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:text="주소를\n입력해주세요"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:layout_weight="6"
                    android:gravity="center"
                    android:text="가까운 거리에 시터나 일자리를 우선으로 찾아드립니다"/>

            </LinearLayout>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:src="@drawable/woman2"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="@dimen/fragment_vertical_top_margin"
            android:background="@drawable/shadow_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >

            <TextView
                android:id="@+id/id_tv_post_search_btn"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/btn_white_normal"
                android:gravity="center"
                android:textColor="@color/colorTextPink"
                android:text="우편번호 검색"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                />

            <net.gringrid.siso.views.SisoEditText
                android:id="@+id/id_et_post_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:input="우편번호"
                >
            </net.gringrid.siso.views.SisoEditText>


            <net.gringrid.siso.views.SisoEditText
                android:id="@+id/id_et_addr1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:input="기본주소"
                >
            </net.gringrid.siso.views.SisoEditText>

            <net.gringrid.siso.views.SisoEditText
                android:id="@+id/id_et_addr2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:input="상세주소"
                >
            </net.gringrid.siso.views.SisoEditText>

            <TextView
                android:id="@+id/id_tv_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/member_5_terms_info"
                android:textColor="@color/colorContentTextPink"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/id_tv_next_btn"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/btn_pink_normal"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:text="다음"
                android:layout_marginBottom="5dp"
                />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
