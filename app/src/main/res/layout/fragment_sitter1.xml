<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".fragments.Member1Fragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/fragment_vertical_left_margin"
        android:paddingTop="@dimen/fragment_vertical_top_margin"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:gravity="center"
            android:text="@string/member_1_guide_text"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:src="@drawable/woman2"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="@dimen/fragment_vertical_top_margin"
        android:background="@drawable/shadow_line"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >
        <LinearLayout
            android:id="@+id/ll_parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">

            <net.gringrid.siso.views.SisoEditText
                android:id="@+id/id_cb_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:label="프로필 사진을 추가하세요"
                app:input="호감가는 사진으로 좋은 인상을 심어주세요"
                app:input_type="@string/input_type_number"
                >
            </net.gringrid.siso.views.SisoEditText>

            <net.gringrid.siso.views.SisoEditText
                android:id="@+id/id_cb_basic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:label="시터 기본 정보"
                app:input="시터가 되기 위한 기본정보를 입력해주세요"
                app:input_type="@string/input_type_number"
                >
            </net.gringrid.siso.views.SisoEditText>

            <net.gringrid.siso.views.SisoEditText
                android:id="@+id/id_cb_work"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:label="희망 근무조건"
                app:input="희망 근무조건을 입력해주세요"
                app:input_type="@string/input_type_number"
                >
            </net.gringrid.siso.views.SisoEditText>

            <net.gringrid.siso.views.SisoEditText
                android:id="@+id/id_cb_etc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:label="부가정보 입력하기"
                app:input="부가정보를 입력해주세요"
                app:input_type="@string/input_type_number"
                >
            </net.gringrid.siso.views.SisoEditText>

            <net.gringrid.siso.views.SisoEditText
                android:id="@+id/id_cb_self"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:label="자기소개하기"
                app:input="시터로서의 매력을 어필해보세요"
                app:input_type="@string/input_type_number"
                >
            </net.gringrid.siso.views.SisoEditText>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
