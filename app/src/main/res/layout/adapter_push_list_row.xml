<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/id_ll_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@android:color/white"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:gravity="center_vertical"
    >
    <ImageView
        android:id="@+id/id_iv_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_push_siso"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/id_tv_msg"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="최지호 시터님이 연락처 공개를 요청했습니다"
            android:layout_marginTop="5dp"
            style="@style/ListBreif"
            />
        <TextView
            android:id="@+id/id_tv_req_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12월 29일 오전 4:47"
            style="@style/ListEtc"
            android:layout_marginTop="5dp"
            />
    </LinearLayout>
</LinearLayout>
