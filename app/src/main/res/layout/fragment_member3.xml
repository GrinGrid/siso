
<ScrollView
    android:id="@+id/id_sv"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/white"
        tools:context=".fragments.Member01UserTypeFragment">

        <!-- TODO: Update blank fragment layout -->
        <net.gringrid.siso.views.SisoInputProgress
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:total_stage="5"
            app:current_stage="2">
        </net.gringrid.siso.views.SisoInputProgress>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/fragment_vertical_left_margin"
            android:paddingTop="@dimen/fragment_vertical_top_margin"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:orientation="vertical"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:text="이름이 무엇인가요?"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:layout_weight="6"
                    android:gravity="center"
                    android:text="상대방에게 신뢰감을 주기 위해 반드시 실명과 실제 생일을 사용하세요"/>

            </LinearLayout>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:src="@drawable/woman2"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="@dimen/fragment_vertical_top_margin"
            android:background="@drawable/shadow_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >

            <net.gringrid.siso.views.SisoEditText
                android:id="@+id/id_et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:label="이메일 주소를 입력해주세요"
                app:input="필수"
                app:input_type="@string/input_type_email"
                >
            </net.gringrid.siso.views.SisoEditText>

            <net.gringrid.siso.views.SisoEditText
                android:id="@+id/id_et_passwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:label="사용하실 비밀번호를 입력해주세요"
                app:input="필수"
                >
            </net.gringrid.siso.views.SisoEditText>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/member_2_passwd_info"
                android:textColor="@color/colorContentTextPink"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/id_tv_next_btn"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/round_btn_pink"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:text="다음"
                android:layout_marginBottom="5dp"
                />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
