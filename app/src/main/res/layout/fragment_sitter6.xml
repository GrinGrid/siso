<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".fragments.Sitter6Fragment">
    <ScrollView
        android:id="@+id/id_sv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:paddingBottom="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@android:color/white"
            tools:context=".fragments.Sitter2Fragment">

            <net.gringrid.siso.views.SisoInputProgress
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:total_stage="3"
                app:current_stage="0">
            </net.gringrid.siso.views.SisoInputProgress>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sitter6_env"
                style="@style/SisoJobTitle"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sitter6_env_comment"
                style="@style/SisoJobTitleComment"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:gravity="center">
                <net.gringrid.siso.views.SisoToggleButton
                    android:id="@+id/id_tg_btn_"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:toggle_normal="@drawable/tg_ic_pet_normal"
                    app:toggle_selected="@drawable/tg_ic_pet_selected"
                    app:toggleLabel="@string/sitter6_tg_env_pet"
                    >
                </net.gringrid.siso.views.SisoToggleButton>
                <net.gringrid.siso.views.SisoToggleButton
                    android:id="@+id/id_tg_btn_cctv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:toggle_normal="@drawable/tg_ic_cctv_normal"
                    app:toggle_selected="@drawable/tg_ic_cctv_selected"
                    app:toggleLabel="@string/sitter6_tg_env_cctv"
                    >
                </net.gringrid.siso.views.SisoToggleButton>
                <net.gringrid.siso.views.SisoToggleButton
                    android:id="@+id/id_tg_btn_adult"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:toggle_normal="@drawable/tg_ic_adult_normal"
                    app:toggle_selected="@drawable/tg_ic_adult_selected"
                    app:toggleLabel="@string/sitter6_tg_env_adult"
                    >
                </net.gringrid.siso.views.SisoToggleButton>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@drawable/line_30"
                style="@style/SisoJobLine30"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sitter6_baby_gender"
                style="@style/SisoJobTitle"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sitter6_baby_gender_comment"
                style="@style/SisoJobTitleComment"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:gravity="center">
                <net.gringrid.siso.views.SisoToggleButton
                    android:id="@+id/id_tg_btn_boy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:toggle_normal="@drawable/tg_ic_boy_normal"
                    app:toggle_selected="@drawable/tg_ic_boy_selected"
                    app:toggleLabel="@string/sitter6_tg_baby_gender_boy"
                    >
                </net.gringrid.siso.views.SisoToggleButton>
                <net.gringrid.siso.views.SisoToggleButton
                    android:id="@+id/id_tg_btn_girl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    app:toggle_normal="@drawable/tg_ic_girl_normal"
                    app:toggle_selected="@drawable/tg_ic_girl_selected"
                    app:toggleLabel="@string/sitter6_tg_baby_gender_girl"
                    >
                </net.gringrid.siso.views.SisoToggleButton>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <TextView
        android:id="@+id/id_tv_next_btn"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        style="@style/SisoNextButton"
        android:text="@string/btn_next"
        />
</LinearLayout>

