<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="240"
    android:background="@android:color/white"
    android:baselineAligned="false">

    <TextView
        android:id="@+id/id_tv_label"
        android:layout_width="match_parent"
        android:textColor="@color/colorTextPink"
        android:layout_height="0dp"
        android:layout_weight="70"
        android:textSize="11sp"
        android:text="이메일"
        />

    <EditText
        android:id="@+id/id_et_input"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="110"
        android:textSize="15sp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:hint="필수"
        android:background="@drawable/edit_text_normal"/>

    <TextView
        android:id="@+id/id_tv_guide"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="60"
        android:textColor="@color/color666666"
        android:textSize="10sp"
        android:gravity="right"
        android:text="아이디 및 비밀번호 찾기에 이용되니 신중하게 입력해주시기 바랍니다"
        />

</LinearLayout>
