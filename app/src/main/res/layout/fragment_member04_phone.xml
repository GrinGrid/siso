
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    >
    <ScrollView
        android:id="@+id/id_sv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:paddingBottom="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@android:color/white"
            tools:context=".fragments.Sitter03GenderChildrenFragment">

            <!-- TODO: Update blank fragment layout -->
            <net.gringrid.siso.views.SisoInputProgress
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:total_stage="5"
                app:current_stage="3">
            </net.gringrid.siso.views.SisoInputProgress>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/fragment_vertical_left_margin"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:orientation="vertical"
                    android:gravity="center"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:textSize="20sp"
                        style="@style/MemberGuideTitle"
                        android:text="@string/member04_title"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:layout_weight="6"
                        style="@style/MemberGuideText"
                        android:text="@string/member04_guide"/>

                </LinearLayout>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:src="@drawable/woman2"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/fragment_vertical_top_margin"
                android:background="@drawable/shadow_line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                >

                <net.gringrid.siso.views.SisoEditText
                    android:id="@+id/id_et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    app:label="@string/member04_et_phone_label"
                    app:input="@string/member04_et_phone_hint"
                    app:input_type="@string/input_type_phone"
                    >
                </net.gringrid.siso.views.SisoEditText>

                <TextView
                    android:id="@+id/id_tv_request_auth_sms"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/round_btn_green"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:text="@string/member04_btn_receive_auth_num"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    />

                <net.gringrid.siso.views.SisoEditText
                    android:id="@+id/id_et_auth_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:input="@string/member04_et_auth_num_hint"
                    app:input_type="@string/input_type_number"
                    app:isHiddenLabel="true"
                    >
                </net.gringrid.siso.views.SisoEditText>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>
    <TextView
        android:id="@+id/id_tv_next_btn"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        style="@style/SisoNextButton"
        android:text="@string/btn_next"
        />
</LinearLayout>
