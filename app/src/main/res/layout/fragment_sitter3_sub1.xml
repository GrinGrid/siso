
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".fragments.Sitter02GenderFragment">
    <ScrollView
        android:id="@+id/id_sv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:paddingBottom="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@android:color/white"
            tools:context=".fragments.Sitter02GenderFragment">

            <net.gringrid.siso.views.SisoInputProgress
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:total_stage="4"
                app:current_stage="1">
            </net.gringrid.siso.views.SisoInputProgress>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/id_tv_start"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/sitter3_sub1_calendar_start"
                        style="@style/SisoJobTitle"
                        android:textSize="16sp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:background="?selectableItemBackgroundBorderless"
                        >
                        <ToggleButton
                            android:id="@+id/id_tg_start_0"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="4"
                            android:textOn="@string/sitter3_sub1_no_matter"
                            android:textOff="@string/sitter3_sub1_no_matter"
                            style="@style/ToggleBtnStyle"
                            android:textSize="12sp"
                            />
                        <ToggleButton
                            android:id="@+id/id_tg_start_1"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="6"
                            android:textOn="@string/sitter3_sub1_start"
                            android:textOff="@string/sitter3_sub1_start"
                            style="@style/ToggleBtnStyle"
                            android:textSize="12sp"
                            android:layout_marginLeft="5dp"
                            />
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="6dp"
                    android:text="~"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/id_tv_end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/sitter3_sub1_calendar_end"
                        style="@style/SisoJobTitle"
                        android:textSize="16sp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <ToggleButton
                            android:id="@+id/id_tg_end_0"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="4"
                            android:textOn="@string/sitter3_sub1_no_matter"
                            android:textOff="@string/sitter3_sub1_no_matter"
                            style="@style/ToggleBtnStyle"
                            android:textSize="12sp"
                            />
                        <ToggleButton
                            android:id="@+id/id_tg_end_1"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="6"
                            android:textOn="@string/sitter3_sub1_end"
                            android:textOff="@string/sitter3_sub1_end"
                            style="@style/ToggleBtnStyle"
                            android:layout_marginLeft="5dp"
                            android:textSize="12sp"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/id_fl_cv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/box_white"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:visibility="gone"
                >
                <CalendarView
                    android:id="@+id/id_cv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                </CalendarView>
            </FrameLayout>

        </LinearLayout>
    </ScrollView>
    <TextView
        android:id="@+id/id_tv_next_btn"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        style="@style/SisoNextButton"
        android:text="@string/btn_next"
        />
</LinearLayout>

