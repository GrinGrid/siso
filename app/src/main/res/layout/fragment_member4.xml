
<ScrollView
    android:id="@+id/id_sv"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/white"
        tools:context=".fragments.Member01UserTypeFragment">

        <!-- TODO: Update blank fragment layout -->
        <net.gringrid.siso.views.SisoInputProgress
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:total_stage="5"
            app:current_stage="3">
        </net.gringrid.siso.views.SisoInputProgress>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/fragment_vertical_left_margin"
            android:paddingTop="@dimen/fragment_vertical_top_margin"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:orientation="vertical"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:text="휴대폰 번호를\n입력해주세요"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:layout_weight="6"
                    android:gravity="center"
                    android:text="본인 확인을 위해 필요하며\n본인 동의 없이 절대\n공개되지 않으니 안심하세요"/>

            </LinearLayout>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:src="@drawable/woman2"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="@dimen/fragment_vertical_top_margin"
            android:background="@drawable/shadow_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >

            <net.gringrid.siso.views.SisoEditText
                android:id="@+id/id_et_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:label="휴대폰 번호를 입력하세요"
                app:input="필수"
                app:input_type="@string/input_type_phone"
                >
            </net.gringrid.siso.views.SisoEditText>

            <TextView
                android:id="@+id/id_tv_request_auth_sms"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/btn_white_normal"
                android:gravity="center"
                android:textColor="@color/colorTextPink"
                android:text="인증번호 받기"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                />

            <net.gringrid.siso.views.SisoEditText
                android:id="@+id/id_et_auth_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:input="인증번호 6자리"
                app:input_type="@string/input_type_number"
                >
            </net.gringrid.siso.views.SisoEditText>

            <TextView
                android:id="@+id/id_tv_confirm_auth_num"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/btn_white_normal"
                android:gravity="center"
                android:textColor="@color/colorTextPink"
                android:text="인증번호 확인"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/id_tv_next_btn"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/btn_pink_normal"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:text="다음"
                android:layout_marginBottom="5dp"
                />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
