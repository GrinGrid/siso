<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    >
    <ScrollView
        android:id="@+id/id_sv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:paddingBottom="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@android:color/white"
            tools:context=".fragments.Member01UserTypeFragment">

            <!-- TODO: Update blank fragment layout -->
            <net.gringrid.siso.views.SisoInputProgress
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:total_stage="5"
                app:current_stage="4">
            </net.gringrid.siso.views.SisoInputProgress>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/fragment_vertical_left_margin"
                android:paddingTop="@dimen/fragment_vertical_top_margin"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6.5"
                    android:orientation="vertical"
                    android:gravity="center"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        style="@style/MemberGuideTitle"
                        android:text="@string/member05_title"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        style="@style/MemberGuideText"
                        android:text="@string/member05_guide"/>

                </LinearLayout>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:src="@drawable/woman2"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/fragment_vertical_top_margin"
                android:background="@drawable/shadow_line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                >
                <TextView
                    android:id="@+id/id_tv_post_search_btn"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/round_btn_green"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:text="@string/member05_btn_post_no_search"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="5dp"
                    />
                <net.gringrid.siso.views.SisoEditText
                    android:id="@+id/id_et_post_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:input="@string/member05_et_post_no_hint"
                    app:isHiddenLabel="true"
                    >
                </net.gringrid.siso.views.SisoEditText>


                <net.gringrid.siso.views.SisoEditText
                    android:id="@+id/id_et_addr1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:input="@string/member05_et_addr1_hint"
                    app:isHiddenLabel="true"
                    >
                </net.gringrid.siso.views.SisoEditText>

                <net.gringrid.siso.views.SisoEditText
                    android:id="@+id/id_et_addr2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:input="@string/member05_et_addr2_hint"
                    app:isHiddenLabel="true"
                    >
                </net.gringrid.siso.views.SisoEditText>

                <TextView
                    android:id="@+id/id_tv_test"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/member05_terms_info"
                    android:textColor="@color/sisoSecondaryText"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <TextView
        android:id="@+id/id_tv_next_btn"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        style="@style/SisoNextButton"
        android:text="@string/btn_next"
        />
</LinearLayout>
