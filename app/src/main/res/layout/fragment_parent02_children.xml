
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".fragments.Sitter03GenderChildrenFragment">
    <ScrollView
        android:id="@+id/id_sv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:paddingBottom="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@android:color/white"
            tools:context=".fragments.Sitter03GenderChildrenFragment">

            <net.gringrid.siso.views.SisoInputProgress
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:total_stage="4"
                app:current_stage="3">
            </net.gringrid.siso.views.SisoInputProgress>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/parent02_chdrn"
                style="@style/SisoJobTitle"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/parent02_chdrn_comment"
                style="@style/SisoJobTitleComment"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:gravity="center">

                <net.gringrid.siso.views.SisoToggleButton
                    android:id="@+id/id_tg_btn_boy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:toggle_normal="@drawable/tg_ic_boy_normal"
                    app:toggle_selected="@drawable/tg_ic_boy_selected"
                    app:toggleLabel="@string/parent02_add_boy"
                    app:isAddClickListener="true"
                    >
                </net.gringrid.siso.views.SisoToggleButton>
                <net.gringrid.siso.views.SisoToggleButton
                    android:id="@+id/id_tg_btn_girl"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:toggle_normal="@drawable/tg_ic_girl_normal"
                    app:toggle_selected="@drawable/tg_ic_girl_selected"
                    app:toggleLabel="@string/parent02_add_girl"
                    app:isAddClickListener="true"
                    >
                </net.gringrid.siso.views.SisoToggleButton>
                <net.gringrid.siso.views.SisoToggleButton
                    android:id="@+id/id_tg_btn_newborn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:toggle_normal="@drawable/tg_ic_newborn_normal"
                    app:toggle_selected="@drawable/tg_ic_newborn_selected"
                    app:toggleLabel="@string/parent02_add_newborn"
                    app:isAddClickListener="true"
                    >
                </net.gringrid.siso.views.SisoToggleButton>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/id_ll_child_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@drawable/line_30"
                    style="@style/SisoJobLine30"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/SisoJobTitle"
                        android:text="@string/word_name"
                        android:layout_marginLeft="50dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/SisoJobTitle"
                        android:text="@string/word_birth"
                        android:layout_marginLeft="70dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/SisoJobTitle"
                        android:text="@string/word_care_yn"
                        android:layout_marginLeft="60dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/id_ll_child"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    >
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/id_ll_newborn_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@drawable/line_30"
                    style="@style/SisoJobLine30"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/SisoJobTitle"
                        android:text="@string/word_birth_name"
                        android:layout_marginLeft="50dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/SisoJobTitle"
                        android:text="@string/word_birth_exp_day"
                        android:layout_marginLeft="70dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/SisoJobTitle"
                        android:text="@string/word_care_yn"
                        android:layout_marginLeft="40dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/id_ll_newborn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    >
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <TextView
        android:id="@+id/id_tv_next_btn"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        style="@style/SisoNextButton"
        android:text="@string/btn_confirm"
        />
</LinearLayout>

