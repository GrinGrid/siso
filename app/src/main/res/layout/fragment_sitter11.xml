
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".fragments.Sitter11PhotoFragment">
    <ScrollView
        android:id="@+id/id_sv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@android:color/white"
            tools:context=".fragments.Member01UserTypeFragment">

            <!-- 사진영역 start -->
            <LinearLayout
                android:id="@+id/id_ll_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorDEDEDE"
                android:layout_marginTop="10dp"
                >
                <!--<com.naver.android.helloyako.imagecrop.view.ImageCropView-->
                <!--android:id="@+id/id_icv"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="300dp"-->
                <!--imagecrop:setInnerGridMode="on"-->
                <!--imagecrop:gridInnerStroke="1dp"-->
                <!--imagecrop:gridInnerColor="#66ffffff"-->
                <!--imagecrop:setOuterGridMode="on"-->
                <!--imagecrop:gridOuterStroke="1dp"-->
                <!--imagecrop:gridOuterColor="#ffffff"-->
                <!--/>-->
                <!--<ImageView-->
                    <!--android:id="@+id/id_civ"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:src="@drawable/sitter_detail_background01"-->
                    <!--android:background="@color/colorContentTextPink"-->
                    <!--/>-->
                <!--<com.isseiaoki.simplecropview.CropImageView-->
                    <!--android:id="@+id/id_civ"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--app:scv_crop_mode="fit_image"-->
                    <!--android:adjustViewBounds="true"-->
                    <!--/>-->
                <com.theartofdev.edmodo.cropper.CropImageView
                    android:id="@+id/id_civ"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cropInitialCropWindowPaddingRatio="0"
                    >

                </com.theartofdev.edmodo.cropper.CropImageView>

