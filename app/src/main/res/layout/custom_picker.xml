<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/id_ll_toggle"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/id_iv_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/picker_btn_minus"/>
    <TextView
        android:id="@+id/id_tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:background="@drawable/picker_text_bg"
        android:text="여성입니다"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:gravity="center"
        />
    <ImageView
        android:id="@+id/id_iv_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/picker_btn_plus"/>



</LinearLayout>
