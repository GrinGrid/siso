<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.gringrid.siso.PopupContact"
    android:orientation="vertical"
    >
    <ImageView
        android:id="@+id/id_iv_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/detail_profile_sample"
        />
    <TextView
        android:id="@+id/id_tv_main_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이현자 시터의\n연락처 공개요청을 거절하시겠습니까?"
        style="@style/ListName"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/line_30"
        style="@style/SisoJobLine30"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            
            />

    </LinearLayout>
    <TextView
        android:id="@+id/id_tv_main_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이현자 시터의 연락처 공개요청을 거절하시겠습니까?"
        style="@style/ListName"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/line_30"
        style="@style/SisoJobLine30"
        />

</LinearLayout>
